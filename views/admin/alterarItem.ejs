</style>

<div class="container-fluid" style="background: #f5f5f5; min-height: 100vh; padding: 0;">
    <!-- Header -->
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1 class="page-title">
                        <%=prod.nome%>
                    </h1>
                    <p class="page-subtitle mb-0">
                        Alterado em <%= new Date().toLocaleDateString('pt-BR') %> • ID: <%=prod.id%>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Tabs -->
        <ul class="nav nav-tabs-custom">
            <li class="nav-item">
                <a class="nav-link active" href="#" data-tab="caracteristicas"><i class="bi bi-card-list me-2"></i>Características</a>
            </li>
            <li class="nav-item" id="tabImagens">
                <a class="nav-link" href="#" data-tab="imagens"><i class="bi bi-image me-2"></i>Imagens</a>
            </li>
        </ul>

        <div id="form">
            <input type="hidden" value="<%=prod.id%>" id="prodId">
            <input type="hidden" value="<%=tipo%>" id="tipoItem">

            <!-- Conteúdo da Aba Características -->
            <div class="tab-content active" id="tab-caracteristicas">
                <!-- Informações Básicas -->
                <div class="card-section">
                    <div class="section-title">
                        <i class="bi bi-info-circle"></i>
                        Informações Básicas
                    </div>
                    
                    <div class="form-row-custom">
                        <div class="form-group-custom">
                            <label for="nomeval">Nome *</label>
                            <input type="text" class="form-control" id="nomeval" value="<%=prod.nome%>" maxlength="50">
                        </div>

                        <div class="form-group-custom" id="codigoDiv">
                            <label for="codigoval">Código (SKU)</label>
                            <input type="text" class="form-control" id="codigoval" value="<%=prod.id%>" disabled>
                        </div>

                        <div class="form-group-custom">
                            <label>Tipo</label>
                            <input type="text" class="form-control" value="<% if(tipo == 1){%>Produto<%} else if(tipo == 2){%>Insumo<%} else if(tipo == 3){%>Serviço<%} else if(tipo == 4){%>Equipamento Agrícola<%} else if(tipo == 5){%>Marca<%} else if(tipo == 6){%>Categoria<%}%>" disabled>
                        </div>
                    </div>

                    <div class="form-row-custom" id="precoRow">
                        <div class="form-group-custom">
                            <label for="precoval">Preço de Venda</label>
                            <input type="number" step="0.01" class="form-control" id="precoval" value="<%=prod.preco%>">
                        </div>
                    </div>

                    <div class="form-group-custom" id="descricaoDiv">
                        <label for="descricaoval">Descrição</label>
                        <input type="text" class="form-control" id="descricaoval" value="<%=prod.descricao%>" maxlength="100">
                    </div>
                </div>

                <!-- Classificação -->
                <div class="card-section" id="classificacaoSection">
                    <div class="section-title">
                        <i class="bi bi-tags"></i>
                        Classificação
                    </div>
                    
                    <div class="form-row-custom">
                        <div class="form-group-custom" id="marcaDiv">
                            <label for="marcaval">Marca</label>
                            <select id="marcaval" class="form-control">
                                <option value="0">Selecione uma marca...</option>
                                <% for(let i=0; i<listaMarcas.length ; i++) {%>
                                    <option value="<%=listaMarcas[i].id%>" <% if(listaMarcas[i].id == prod.marca){%>selected<%}%>><%=listaMarcas[i].nome%></option>
                                <%}%>
                            </select>
                        </div>

                        <div class="form-group-custom" id="categoriaDiv">
                            <label for="categoriaval">Categoria</label>
                            <select id="categoriaval" class="form-control">
                                <option value="0">Selecione uma categoria...</option>
                                <% for(let i=0; i<listaCategorias.length ; i++) {%>
                                    <option value="<%=listaCategorias[i].id%>" <% if(listaCategorias[i].id == prod.categoria){%>selected<%}%>><%=listaCategorias[i].nome%></option>
                                <%}%>
                            </select>
                        </div>
                </div>
            </div>

            <!-- Proprietário (apenas para Equipamento Agrícola) -->
            <div class="card-section" id="proprietarioSection" style="display: none;">
                <div class="section-title">
                    <i class="bi bi-person"></i>
                    Proprietário
                </div>
                
                <div class="form-row-custom">
                    <div class="form-group-custom" id="procurarPessoaDiv">
                        <label for="procurarPessoaval">Buscar Proprietário</label>
                        <input type="text" class="form-control" id="procurarPessoaval" placeholder="Digite o nome do proprietário ou empresa" maxlength="100">
                    </div>

                    <div class="form-group-custom" id="pessoaDiv">
                        <label for="pessoaval">Proprietário Selecionado</label>
                        <select id="pessoaval" class="form-control">
                            <option selected value="<%=prod.idPessoa%>"><%=prod.pessoa_nome%></option>
                        </select>
                    </div>
                </div>
            </div>
        </div>            <!-- Conteúdo da Aba Imagens -->
            <div class="tab-content" id="tab-imagens">
                <!-- Imagens -->
                <div class="card-section">
                    <div class="section-title">
                        <i class="bi bi-image"></i>
                        Imagens do Produto
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6" id="divImagemAtual">
                            <label class="mb-2">Imagem Atual</label>
                            <div>
                                <% if(prod.imagem) { %>
                                    <img src="/images/produtos/<%=prod.imagem%>" class="image-preview img-fluid" style="max-height: 300px; object-fit: contain; border: 1px solid #dee2e6; border-radius: 8px; padding: 10px;">
                                <% } else { %>
                                    <div class="image-upload-area">
                                        <i class="bi bi-image" style="font-size: 48px; color: #ccc;"></i>
                                        <p class="text-muted mt-2 mb-0">Nenhuma imagem cadastrada</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="mb-2">Atualizar Imagem</label>
                            <div class="image-upload-area">
                                <i class="bi bi-cloud-upload" style="font-size: 48px; color: #28a745;"></i>
                                <p class="mt-2 mb-2"><strong>Escolha uma imagem</strong></p>
                                <input class="form-control" type="file" id="inputImagem" accept="image/jpeg,image/jpg,image/png,image/webp">
                                <small class="text-muted d-block mt-2">JPG, JPEG, PNG, WebP (máx. 2MB)</small>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Prévia da nova imagem em linha separada -->
                    <div class="row mt-3" id="divPrevia" style="display:none;">
                        <div class="col-md-12">
                            <label class="mb-2">Prévia da Nova Imagem</label>
                            <div class="text-center">
                                <img id="previaImagem" class="image-preview img-fluid" style="max-height: 400px; object-fit: contain; border: 2px solid #28a745; border-radius: 8px; padding: 10px; background: #f8f9fa;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botões de Ação -->
            <div class="action-buttons">
                <button class="btn-save" id="cadastrar">
                    <i class="bi bi-check-lg me-2"></i>Salvar produto
                </button>
                <a id="voltar" href="/admin/listagem/1" class="btn-cancel">
                    Cancelar
                </a>
            </div>
        </div>
    </div>
</div>

<script>
// Controlar visibilidade de campos e troca de abas
document.addEventListener('DOMContentLoaded', function() {
    const tipoItem = <%=tipo%>;
    
    // Sistema de abas
    const tabLinks = document.querySelectorAll('.nav-tabs-custom .nav-link');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const targetTab = this.getAttribute('data-tab');
            
            // Remover active de todos os links e conteúdos
            tabLinks.forEach(l => l.classList.remove('active'));
            tabContents.forEach(c => c.classList.remove('active'));
            
            // Adicionar active ao link clicado
            this.classList.add('active');
            
            // Mostrar o conteúdo correspondente
            document.getElementById('tab-' + targetTab).classList.add('active');
        });
    });
    
    // Mostrar/esconder seções baseado no tipo
    const proprietarioSection = document.getElementById('proprietarioSection');
    
    if(tipoItem === 1 || tipoItem === 2) { // Produto/Insumo
        // Não mostrar proprietário
        proprietarioSection?.remove();
    } else if(tipoItem === 3) { // Serviço
        document.getElementById('tab-imagens')?.remove();
        document.getElementById('classificacaoSection')?.remove();
        proprietarioSection?.remove();
        document.getElementById('tabImagens')?.remove();
    } else if(tipoItem === 4) { // Equipamento Agrícola
        // Mostrar proprietário
        if(proprietarioSection) proprietarioSection.style.display = 'block';
        document.getElementById('tab-imagens')?.remove();
        document.getElementById('tabImagens')?.remove();
    } else if(tipoItem === 5 || tipoItem === 6) { // Marca ou Categoria
        document.getElementById('tab-imagens')?.remove();
        document.getElementById('classificacaoSection')?.remove();
        proprietarioSection?.remove();
        document.getElementById('precoRow')?.remove();
        document.getElementById('descricaoDiv')?.remove();
        document.getElementById('tabImagens')?.remove();
    }

    if(tipoItem !== 1 && tipoItem !== 2) { // Não é produto/insumo
        document.getElementById('tab-imagens')?.remove();
        document.getElementById('tabImagens')?.remove();
    }
});
</script>