            </div>
            <div class="confirm-detail-row">
                <span class="confirm-detail-label">Novo Estoque:</span>
                <span class="confirm-detail-value highlight" id="confirmNovoEstoque">0</span>
            </div>
        </div>
        <div class="confirm-buttons">
            <button class="confirm-btn no" onclick="closeConfirmModal()">Cancelar</button>
            <button class="confirm-btn yes" id="confirmYesBtn">Confirmar</button>
        </div>
    </div>
</div>

<script>
// Funções globais para modal
function closeConfirmModal() {
    document.getElementById('confirmModal').classList.remove('show');
}

function showConfirmModal(tipo, estoqueAtual, quantidade, novoEstoque, callback) {
    const modal = document.getElementById('confirmModal');
    const icon = document.getElementById('confirmIcon');
    const title = document.getElementById('confirmTitle');
    const message = document.getElementById('confirmMessage');
    
    // Configurar ícone e título
    icon.className = 'confirm-icon ' + tipo;
    if(tipo === 'entrada') {
        icon.innerHTML = '<i class="bi bi-arrow-up-circle"></i>';
        title.textContent = 'Confirmar Entrada de Estoque';
        message.textContent = 'Você está adicionando itens ao estoque';
    } else {
        icon.innerHTML = '<i class="bi bi-arrow-down-circle"></i>';
        title.textContent = 'Confirmar Saída de Estoque';
        message.textContent = 'Você está retirando itens do estoque';
    }
    
    // Preencher detalhes
    document.getElementById('confirmEstoqueAtual').textContent = estoqueAtual + ' un';
    document.getElementById('confirmQuantidade').textContent = (tipo === 'entrada' ? '+' : '-') + quantidade + ' un';
    document.getElementById('confirmNovoEstoque').textContent = novoEstoque + ' un';
    
    // Configurar botão de confirmação
    const yesBtn = document.getElementById('confirmYesBtn');
    yesBtn.onclick = function() {
        callback();
        closeConfirmModal();
    };
    
    // Mostrar modal
    modal.classList.add('show');
}

// Controlar visibilidade de campos e troca de abas
document.addEventListener('DOMContentLoaded', function() {
    const tipoItem = <%=tipo%>;
    
    // Sistema de abas
    const tabLinks = document.querySelectorAll('.nav-tabs-custom .nav-link');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const targetTab = this.getAttribute('data-tab');
            
            // Remover active de todos os links e conteúdos
            tabLinks.forEach(l => l.classList.remove('active'));
            tabContents.forEach(c => c.classList.remove('active'));
            
            // Adicionar active ao link clicado
            this.classList.add('active');
            
            // Mostrar o conteúdo correspondente
            document.getElementById('tab-' + targetTab).classList.add('active');
        });
    });
    
    // Verificar se deve abrir a aba de estoque via URL
    const urlParams = new URLSearchParams(window.location.search);
    const tabParam = urlParams.get('tab');
    
    if(tabParam === 'estoque') {
        // Remover active da aba atual
        tabLinks.forEach(l => l.classList.remove('active'));
        tabContents.forEach(c => c.classList.remove('active'));
        
        // Ativar aba de estoque
        const estoqueTab = document.querySelector('[data-tab="estoque"]');
        const estoqueContent = document.getElementById('tab-estoque');
        
        if(estoqueTab && estoqueContent) {
            estoqueTab.classList.add('active');
            estoqueContent.classList.add('active');
        }
    }
    
    // Mostrar/esconder seções baseado no tipo
    const proprietarioSection = document.getElementById('proprietarioSection');
    const estoqueSection = document.getElementById('estoqueSection');
    
    if(tipoItem === 1 || tipoItem === 2) { // Produto/Insumo
        // Não mostrar proprietário
        proprietarioSection?.remove();
        // Mostrar estoque
        if(estoqueSection) estoqueSection.style.display = 'block';
        // Mostrar aba de estoque
        document.getElementById('tabEstoque').style.display = 'block';
    } else if(tipoItem === 3) { // Serviço
        document.getElementById('tab-imagens')?.remove();
        document.getElementById('tab-estoque')?.remove();
        document.getElementById('classificacaoSection')?.remove();
        proprietarioSection?.remove();
        estoqueSection?.remove();
        document.getElementById('tabImagens')?.remove();
        document.getElementById('tabEstoque')?.remove();
        // Mudar label do preço
        const precoLabel = document.getElementById('precoLabel');
        if(precoLabel) precoLabel.textContent = 'Preço';
    } else if(tipoItem === 4) { // Equipamento Agrícola
        // Não mostrar proprietário
        proprietarioSection?.remove();
        estoqueSection?.remove();
        document.getElementById('tab-imagens')?.remove();
        document.getElementById('tab-estoque')?.remove();
        document.getElementById('tabImagens')?.remove();
        document.getElementById('tabEstoque')?.remove();
        // Não mostrar preço
        document.getElementById('precoRow')?.remove();
    } else if(tipoItem === 5 || tipoItem === 6) { // Marca ou Categoria
        document.getElementById('tab-imagens')?.remove();
        document.getElementById('tab-estoque')?.remove();
        document.getElementById('classificacaoSection')?.remove();
        proprietarioSection?.remove();
        estoqueSection?.remove();
        document.getElementById('precoRow')?.remove();
        document.getElementById('descricaoDiv')?.remove();
        document.getElementById('tabImagens')?.remove();
        document.getElementById('tabEstoque')?.remove();
    }

    if(tipoItem !== 1 && tipoItem !== 2) { // Não é produto/insumo
        document.getElementById('tab-imagens')?.remove();
        document.getElementById('tab-estoque')?.remove();
        document.getElementById('tabImagens')?.remove();
        document.getElementById('tabEstoque')?.remove();
    }
    
    // Controle de estoque na aba Estoque
    const btnEntrada = document.getElementById('btnEntradaEstoque');
    const btnSaida = document.getElementById('btnSaidaEstoque');
    
    if(btnEntrada) {
        btnEntrada.addEventListener('click', function() {
            const qtdInput = document.getElementById('qtdMovimentoTab');
            const quantidade = parseInt(qtdInput.value);
            
            if(!quantidade || quantidade <= 0) {
                showToast('Atenção', 'Informe uma quantidade válida', 'error');
                return;
            }
            
            const displayEstoque = document.getElementById('displayEstoqueAtual');
            const estoqueAtual = parseInt(displayEstoque.textContent);
            const novoEstoque = estoqueAtual + quantidade;
            
            showConfirmModal('entrada', estoqueAtual, quantidade, novoEstoque, function() {
                atualizarEstoque(quantidade);
            });
        });
    }
    
    if(btnSaida) {
        btnSaida.addEventListener('click', function() {
            const qtdInput = document.getElementById('qtdMovimentoTab');
            const quantidade = parseInt(qtdInput.value);
            
            if(!quantidade || quantidade <= 0) {
                showToast('Atenção', 'Informe uma quantidade válida', 'error');
                return;
            }
            
            const displayEstoque = document.getElementById('displayEstoqueAtual');
            const estoqueAtual = parseInt(displayEstoque.textContent);
            
            if(quantidade > estoqueAtual) {
                showToast('Erro', `Quantidade insuficiente em estoque. Disponível: ${estoqueAtual}`, 'error');
                return;
            }
            
            const novoEstoque = estoqueAtual - quantidade;
            
            showConfirmModal('saida', estoqueAtual, quantidade, novoEstoque, function() {
                atualizarEstoque(-quantidade);
            });
        });
    }
    
    function atualizarEstoque(quantidade) {
        const prodId = document.getElementById('prodId').value;
        
        fetch('/admin/atualizarEstoque', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({id: prodId, quantidade: quantidade})
        })
        .then(function(resposta){
            return resposta.json();
        })
        .then(function(corpo){
            if(corpo.ok){
                const displayEstoque = document.getElementById('displayEstoqueAtual');
                if(displayEstoque) {
                    displayEstoque.textContent = corpo.estoque + ' un';
                }
                
                const qtdInput = document.getElementById('qtdMovimentoTab');
                qtdInput.value = '';
                
                const tipoTexto = quantidade > 0 ? 'Entrada' : 'Saída';
                showToast('Sucesso', `${tipoTexto} de ${Math.abs(quantidade)} unidade(s) registrada!`, 'success');
            } else {
                showToast('Erro', corpo.msg || 'Erro ao atualizar estoque', 'error');
            }
        })
        .catch(function(erro){
            showToast('Erro', 'Erro ao atualizar estoque', 'error');
        });
    }
});
</script>