<div class="container-fluid">
    <!-- Header -->
    <div class="page-header">
        <h1 class="page-title">Cadastrar Novo Item</h1>
        <p class="page-subtitle">Preencha todos os campos obrigatórios para cadastrar um novo produto ou insumo</p>
    </div>

    <!-- Formulário -->
    <div class="row">
        <div class="col-lg-8">
            <!-- Informações Básicas -->
            <div class="card-section">
                <h2 class="section-title">
                    <i class="bi bi-info-circle"></i>
                    Informações Básicas
                </h2>

                <div class="form-group-custom">
                    <label for="tipoItem">Tipo de Item <span class="required">*</span></label>
                    <select name="tipoItem" id="tipoItem" class="form-control" required>
                        <option value="0" disabled selected>Selecione o tipo...</option>
                        <option value="1">Produto</option>
                        <option value="2">Insumo</option>
                    </select>
                </div>

                <div class="form-group-custom">
                    <label for="nomeval">Nome <span class="required">*</span></label>
                    <input type="text" class="form-control" id="nomeval" placeholder="Digite o nome do item" maxlength="50" required>
                </div>

                <div class="form-row-custom">
                    <div class="form-group-custom">
                        <label for="precoval">Preço de Venda <span class="required">*</span></label>
                        <input type="number" class="form-control" id="precoval" placeholder="0.00" step="0.01" min="0" required>
                    </div>
                    <div class="form-group-custom">
                        <label for="estoqueval">Estoque Inicial <span class="required">*</span></label>
                        <input type="number" class="form-control" id="estoqueval" placeholder="0" min="0" value="0" required>
                    </div>
                </div>

                <div class="form-group-custom">
                    <label for="descricaoval">Descrição <span class="required">*</span></label>
                    <textarea class="form-control" id="descricaoval" placeholder="Descreva o item..." maxlength="1000" rows="3" required></textarea>
                </div>
            </div>

            <!-- Classificação -->
            <div class="card-section">
                <h2 class="section-title">
                    <i class="bi bi-tags"></i>
                    Classificação
                </h2>

                <div class="form-group-custom">
                    <label for="categoriaval">Categoria <span class="required">*</span></label>
                    <div class="select-with-add">
                        <select name="categoria" id="categoriaval" class="form-control" required>
                            <option value="0" disabled selected>Selecione uma categoria...</option>
                            <% for(let i=0; i<listaCategorias.length ; i++) {%>
                                <option value="<%=listaCategorias[i].id%>"><%=listaCategorias[i].nome%></option>
                            <%}%>
                        </select>
                        <a class="add-new-btn" href="/admin/cadastrarCategoria">
                            <i class="bi bi-plus-lg"></i> Nova
                        </a>
                    </div>
                </div>

                <div class="form-group-custom">
                    <label for="marcaval">Marca <span class="required">*</span></label>
                    <div class="select-with-add">
                        <select name="marca" id="marcaval" class="form-control" required>
                            <option value="0" disabled selected>Selecione uma marca...</option>
                            <% for(let i=0; i<listaMarcas.length ; i++) {%>
                                <option value="<%=listaMarcas[i].id%>"><%=listaMarcas[i].nome%></option>
                            <%}%>
                        </select>
                        <a class="add-new-btn" href="/admin/cadastrarMarca">
                            <i class="bi bi-plus-lg"></i> Nova
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Imagens -->
            <div class="card-section">
                <h2 class="section-title">
                    <i class="bi bi-image"></i>
                    Imagem do Produto <span class="required">*</span>
                </h2>

                <div class="image-upload-area" onclick="document.getElementById('inputImagem').click()">
                    <i class="bi bi-cloud-upload" style="font-size: 48px; color: #28a745;"></i>
                    <p style="margin: 12px 0 4px; font-weight: 500; color: #333;">Clique para selecionar</p>
                    <p style="font-size: 12px; color: #666; margin: 0;">JPG, JPEG, PNG, WebP (máx. 2MB)</p>
                    <input class="form-control" type="file" id="inputImagem" accept="image/jpeg,image/jpg,image/png,image/webp" style="display: none;" required>
                </div>

                <div id="divPrevia" style="display:none;">
                    <img id="previaImagem" class="image-preview">
                </div>
            </div>
        </div>
    </div>

    <!-- Botões de Ação -->
    <div class="action-buttons">
        <button class="btn-save" id="cadastrar">
            <i class="bi bi-check-circle"></i>
            Cadastrar Item
        </button>
        <a id="voltar" href="/admin/listagem/1" class="btn-cancel">Cancelar</a>
    </div>
</div>