<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Histórico de Caixas</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                        <li class="breadcrumb-item active">Histórico de Caixas</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Todos os Caixas</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Funcionário</th>
                                    <th>Data Abertura</th>
                                    <th>Data Fechamento</th>
                                    <th>Valor</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (caixas && caixas.length > 0) { %>
                                    <% caixas.forEach(function(caixa) { %>
                                        <tr>
                                            <td><%= caixa.id %></td>
                                            <td><%= caixa.nomeFuncionario %></td>
                                            <td><%= new Date(caixa.dataAbertura).toLocaleString('pt-BR') %></td>
                                            <td>
                                                <% if (caixa.dataFechamento) { %>
                                                    <%= new Date(caixa.dataFechamento).toLocaleString('pt-BR') %>
                                                <% } else { %>
                                                    <span class="badge bg-success">Aberto</span>
                                                <% } %>
                                            </td>
                                            <td>R$ <%= parseFloat(caixa.valor).toFixed(2).replace('.', ',') %></td>
                                            <td>
                                                <% if (caixa.status == 1) { %>
                                                    <span class="badge bg-success">Aberto</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Fechado</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <a href="/admin/caixa/detalhes/<%= caixa.id %>" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> Ver Detalhes
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">
                                            <i class="fas fa-inbox fa-3x d-block mb-2"></i>
                                            Nenhum caixa encontrado
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>
