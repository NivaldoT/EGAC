<script src="https://cdn.sheetjs.com/xlsx-0.20.3/package/dist/xlsx.full.min.js"></script>
<script src="/js/compras/home.js" defer></script>

<div class="container-fluid mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row mx-5">
                <h3 class="mb-0 col-md-4">Pedidos de Compras</h3>
                <a href="/admin/comprar" class="btn btn-success ms-auto col-md-2"> + Efetuar Compra</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Busca (Número da Compra)</label>
                        <input id="inputBusca" class="form-control" placeholder="Digite o número da Compra..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="selectFiltro">Filtro</label>
                        <select class="form-control" name="selectFiltro" id="selectFiltro">
                            <option value="">Mais Antigos</option>
                            <option value="1">Mais Recentes</option>
                            <option value="2">Valor Total - Crescente</option>
                            <option value="3">Valor Total - Decrescente</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <div class="btn-group w-100" role="group">
                        <button id="buscar" class="btn btn-primary">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <button class="btn btn-success" id="excel">
                            <i class="bi bi-file-earmark-excel"></i> Excel
                        </button>
                        <button onclick="imprimirPedidos()" class="btn btn-info" id="pdf">
                            <i class="bi bi-file-earmark-pdf"></i> PDF
                        </button>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="selectFornecedor">Fornecedor</label>
                        <select class="form-control" name="selectFornecedor" id="selectFornecedor">
                            <option value="">Qualquer</option>
                            <%for(let i=0;i<listaFornecedor.length;i++){%>
                                <option value="<%=listaFornecedor[i].id%>"><%=listaFornecedor[i].nome%></option>
                            <%}%>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="inputDataInicial">Data Inicial:</label>
                        <input class="form-control" type="date" name="inputDataInicial" id="inputDataInicial">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="inputDataFinal">Data Final:</label>
                        <input class="form-control" type="date" name="inputDataFinal" id="inputDataFinal">
                    </div>
                </div>
            </div>
            
            <div class="table-responsive">
                <table id="pedidos" class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Nro. Pedido</th>
                            <th>Data do Pedido</th>
                            <th>Fornecedor</th>
                            <th>Produto</th>
                            <th>Quantidade</th>
                            <th>Valor Unitário</th>
                            <th>Valor do Pedido</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                                Carregando pedidos...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    @media print {
        body * {
            visibility: hidden !important;
        }
        .table-responsive, .table-responsive * {
            visibility: visible !important;
        }
        .table-responsive {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
        .btn, button {
            display: none !important;
        }
    }
</style>
