<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Gerenciar Devoluções de Compra</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                        <li class="breadcrumb-item active">Devoluções de Compra</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            
            <!-- Estatísticas -->
            <div class="row">
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-success rounded-3 p-1 mb-3">
                        <div class="inner">
                            <h3><%= listaDevoCompra.length %></h3>
                            <p>total</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-check"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lista de Devoluções -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Lista de Solicitações</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Data Compra</th>
                                <th>Fornecedor</th>
                                <th>Produto</th>
                                <th>ID Compra</th>
                                <th>Motivo</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (listaDevoCompra && listaDevoCompra.length > 0) { %>
                                <%# listaDevoCompra.forEach(function(dev) { %>
                                <% for(let i=0; i < listaDevoCompra.length; i++) { let dev = listaDevoCompra[i]; %>

                                    <% for( let j = 0; j < listaItensDevoCompra.length; j++) {
                                        if(dev.id == listaItensDevoCompra[j].idDevolucao){
                                            var itemDevo = listaItensDevoCompra[j];
                                            var motivo = listaItensDevoCompra[j].motivo;
                                        }
                                    }%>
                                    <tr>
                                        <td><%= dev.id %></td>
                                        <td><%= new Date(dev.dataCompra).toLocaleDateString('pt-BR') %></td>
                                        <td style="color: #212529;">
                                            <%= dev.nomeFornecedor %><br>
                                        </td>
                                        <td><%= itemDevo.nomeProduto%></td>
                                        <td style="color: #212529;">#<%= dev.idCompra %></td>
                                        <td><span class="badge bg-dark"><%= motivo %></span></td>
                                        <td>
                                            <a href="/admin/devolucoes/<%= dev.id %>" class="btn btn-sm btn-info" title="Visualizar">
                                                <i class="fas fa-eye">Visualizar</i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }; %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center py-4">
                                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">Nenhuma solicitação de devolução encontrada</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </section>
</div>

<script>
async function aprovarDevolucao(id) {
    if (!confirm('Deseja realmente aprovar esta devolução?\n\nUma conta a pagar será gerada automaticamente.')) {
        return;
    }
    
    try {
        const response = await fetch(`/admin/devolucoes/${id}/aprovar`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const data = await response.json();
        
        if (data.ok) {
            alert(data.msg);
            location.reload();
        } else {
            alert(data.msg || 'Erro ao aprovar devolução');
        }
    } catch (error) {
        console.error('Erro:', error);
        alert('Erro ao processar solicitação');
    }
}

async function recusarDevolucao(id) {
    if (!confirm('Deseja realmente recusar esta devolução?')) {
        return;
    }
    
    try {
        const response = await fetch(`/admin/devolucoes/${id}/recusar`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const data = await response.json();
        
        if (data.ok) {
            alert(data.msg);
            location.reload();
        } else {
            alert(data.msg || 'Erro ao recusar devolução');
        }
    } catch (error) {
        console.error('Erro:', error);
        alert('Erro ao processar solicitação');
    }
}
</script>