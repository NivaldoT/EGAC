<script src="/js/ordemServico/home.js" defer></script>

<div class="container-fluid mt-4">
    <div class="card border-0 shadow-sm">

        <div class="card-header bg-white py-3">
            <div class="row mx-5">
                <h3 class="mb-0 col-md-4" id="Titulo">Ordem de Serviços</h3>
                <a href="/admin/OrdemServicos/Abrir" class="btn btn-success ms-auto col-md-2">+ Abrir Ordem de Serviço</a>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Busca (Número da OS/Nome do Cliente)</label>
                        <input id="inputBusca" class="form-control" placeholder="Digite o número da OS/Nome do Cliente..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="selectFiltro">Filtro</label>
                        <select class="form-control" name="selectFiltro" id="selectFiltro">
                            <option value="">ID - Crescente</option>
                            <option value="1">ID - Decrescente</option>
                            <option value="2">Concluídas</option>
                            <option value="3">Não concluídas</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <div class="btn-group w-100" role="group">
                        <button id="buscar" class="btn btn-primary">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <button class="btn btn-success" id="excel">
                            <i class="bi bi-file-earmark-excel"></i> Excel
                        </button>
                        <button onclick="imprimirOS()" class="btn btn-info" id="pdf">
                            <i class="bi bi-file-earmark-pdf"></i> PDF
                        </button>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="selectMarca">Marca</label>
                        <select class="form-control" name="selectMarca" id="selectMarca">
                            <option value="">Qualquer</option>
                            <%for(let i=0;i<listaMarcas.length;i++){%>
                                <option value="<%=listaMarcas[i].id%>"><%=listaMarcas[i].nome%></option>
                            <%}%>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="inputDataInicial">Data Inicial:</label>
                        <input class="form-control" type="date" name="inputDataInicial" id="inputDataInicial">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="inputDataFinal">Data Final:</label>
                        <input class="form-control" type="date" name="inputDataFinal" id="inputDataFinal">
                    </div>
                </div>
            </div>
            
            <div class="table-responsive">
                <table id="tableOS" class="table table-hover table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>ID - OS</th>
                            <th>Proprietário</th>
                            <th>Serviço</th>
                            <th>Equipamento Agrícola</th>
                            <th>Marca</th>
                            <th>Funcionário Responsável</th>
                            <th>Status</th>
                            <th>Comentário</th>
                            <th>Data Abertura</th>
                            <th>Data Agendada</th>
                            <th>Data Conclusão</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="10" class="text-center text-muted">
                                <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                                Carregando pedidos...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    @media print {
        body * {
            visibility: hidden !important;
        }
        .table-responsive, .table-responsive * {
            visibility: visible !important;
        }
        .table-responsive {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            overflow: visible !important;
        }
        table {
            width: 100% !important;
            font-size: 8px !important;
            page-break-inside: auto;
        }
        thead {
            display: table-header-group;
        }
        tr {
            page-break-inside: avoid;
            page-break-after: auto;
        }
        th, td {
            padding: 3px !important;
            font-size: 8px !important;
        }
        .btn, button {
            display: none !important;
        }
        @page {
            size: landscape;
            margin: 1cm;
        }
    }
</style>
