<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <a href="/admin/vendas" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar para Vendas
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Card de Informações da Venda -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        Pedido de Venda - <%= venda.id %>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Data da Venda:</strong></p>
                            <p class="text-muted"><%= new Date(venda.data).toLocaleString('pt-BR') %></p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Valor Total:</strong></p>
                            <p class="text-success fs-4"><strong>R$ <%= parseFloat(venda.valorTotal).toFixed(2).replace('.', ',') %></strong></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card de Itens do Pedido -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        Itens do Pedido
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Produto</th>
                                    <th class="text-center">Quantidade</th>
                                    <th class="text-end">Valor Unit.</th>
                                    <th class="text-end">Valor Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% itens.forEach(function(item) { %>
                                <tr>
                                    <td><%= item.produto %></td>
                                    <td class="text-center"><%= item.quantidade %></td>
                                    <td class="text-end">R$ <%= parseFloat(item.valorUnitario).toFixed(2).replace('.', ',') %></td>
                                    <td class="text-end"><strong>R$ <%= parseFloat(item.valorTotal).toFixed(2).replace('.', ',') %></strong></td>
                                </tr>
                                <% }); %>
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total da Venda:</strong></td>
                                    <td class="text-end"><strong class="text-success fs-5">R$ <%= parseFloat(venda.valorTotal).toFixed(2).replace('.', ',') %></strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar com Dados do Cliente -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        Dados do Cliente
                    </h5>
                </div>
                <div class="card-body">
                    <% if(venda.clienteNome) { %>
                        <div class="mb-3">
                            <p class="mb-1"><strong>Nome:</strong></p>
                            <p class="text-muted"><%= venda.clienteNome %></p>
                        </div>
                        <% if(venda.clienteCpf) { %>
                        <div class="mb-3">
                            <p class="mb-1"><strong>CPF:</strong></p>
                            <p class="text-muted"><%= venda.clienteCpf %></p>
                        </div>
                        <% } %>
                        <% if(venda.clienteEmail) { %>
                        <div class="mb-3">
                            <p class="mb-1"><strong>Email:</strong></p>
                            <p class="text-muted"><%= venda.clienteEmail %></p>
                        </div>
                        <% } %>
                        <% if(venda.clienteTelefone) { %>
                        <div class="mb-3">
                            <p class="mb-1"><strong>Telefone:</strong></p>
                            <p class="text-muted"><%= venda.clienteTelefone %></p>
                        </div>
                        <% } %>
                    <% } else { %>
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle"></i> Venda anônima - Cliente não identificado
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Card de Resumo -->
            <div class="card mt-3">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Resumo
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <small class="text-muted">Nº de Itens</small>
                        <p class="mb-0"><strong><%= itens.length %></strong></p>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">Quantidade Total</small>
                        <p class="mb-0"><strong><%= itens.reduce((sum, item) => sum + parseInt(item.quantidade), 0) %></strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
