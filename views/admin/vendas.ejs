<script src="https://cdn.sheetjs.com/xlsx-0.20.3/package/dist/xlsx.full.min.js"></script>
<script src="/js/pedidos/listar.js"></script>

<div class="container-fluid mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h3 class="mb-0">Pedidos de Venda</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-8">
                    <div class="form-group">
                        <label>Busca (Nome do Produto ou Nro. Venda)</label>
                        <input id="inputBusca" class="form-control" placeholder="Digite o nome do produto ou número da venda..." />
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <div class="btn-group w-100" role="group">
                        <button id="buscar" class="btn btn-primary">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <button class="btn btn-success" id="excel">
                            <i class="bi bi-file-earmark-excel"></i> Excel
                        </button>
                        <button onclick="imprimirVendas()" class="btn btn-info" id="pdf">
                            <i class="bi bi-file-earmark-pdf"></i> PDF
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="table-responsive">
                <table id="pedidos" class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Nro. Venda</th>                   
                            <th>Data da Venda</th>
                            <th>Cliente</th>
                            <th>Produto</th>
                            <th>Quantidade</th>
                            <th>Valor Unitário</th>
                            <th>Valor da Venda</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="7" class="text-center text-muted">
                                <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                                Carregando vendas...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    @media print {
        body * {
            visibility: hidden !important;
        }
        .table-responsive, .table-responsive * {
            visibility: visible !important;
        }
        .table-responsive {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
        .btn, button {
            display: none !important;
        }
    }
</style>
