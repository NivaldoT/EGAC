<!-- Modal Caixa -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" id="modalDialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Controle de Caixa</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="mb-3">
            <span id="nomeCaixaSpan"></span>
            <a href="/admin/caixa/historico" class="btn btn-secondary float-end">Histórico de Caixa</a><br>
            <span id="dataCaixaSpan"></span>
          </div>
          <div id="statusCaixa"></div>
        </div>
        <div class="" id="caixaModal"> <!--BODY CAIXA MODAL-->
        </div>
          <!-- <label>Observações</label>
          <textarea name="obs" class="form-control"></textarea> -->

      </div>
      <div class="modal-footer">
        <div class="col-md-4 d-flex float-end">
          <div class="btn-group w-100 float-end" id="exportarCaixa" role="group">
              <button class="btn btn-success" id="excelCaixa">
                  <i class="bi bi-file-earmark-excel"></i> Excel
              </button>
              <button onclick="window.print()" class="btn btn-info" id="printCaixaPDF">
                  <i class="bi bi-file-earmark-pdf"></i> PDF
              </button>
          </div>
        </div>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Voltar</button>
        <button type="button" class="btn btn-success" id="acaoBtnCaixa"></button><!--Gera de acordo com o caixa-->
      </div>
    </div>
  </div>
</div>

