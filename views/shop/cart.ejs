<div class="cart-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <!-- Selecionar todos -->
                <div class="cart-select-all">
                    <input type="checkbox" id="select-all-products">
                    <label for="select-all-products" style="margin: 0; cursor: pointer;">Todos os produtos</label>
                </div>

                <!-- Produtos -->
                <div class="cart-products-section">
                    <div class="cart-header">
                        <h5>Produtos</h5>
                        <i class="fas fa-chevron-right"></i>
                    </div>

                    <div id="cart-items-container">
                        <!-- Os produtos do localStorage-->
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Resumo -->
                <div class="cart-summary">
                    <h5>Resumo da compra</h5>
                    <div class="cart-summary-row">
                        <span class="cart-summary-label">Produtos (<span id="total-items">0</span>)</span>
                        <span class="cart-summary-value">R$ <span id="subtotal-value">0</span>,<span id="subtotal-cents">00</span></span>
                    </div>
                    <div class="cart-summary-row">
                        <span class="cart-summary-label">Frete</span>
                        <span class="cart-summary-value" style="color: #00a650;">Grátis</span>
                    </div>
                    <div class="cart-summary-total">
                        <span>Total</span>
                        <span>R$ <span id="total-value">0</span>,<span class="price-cents" id="total-cents">00</span></span>
                    </div>
                    <button class="btn-checkout" id="finalizarCompra">Efetuar a compra</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Carregar produtos do localStorage ao abrir a página
function loadCartItems() {
    const cart = JSON.parse(localStorage.getItem('cart')) || [];
    const container = document.getElementById('cart-items-container');
    
    if (cart.length === 0) {
        container.innerHTML = '<p style="text-align: center; padding: 40px; color: #666;">Seu carrinho está vazio</p>';
        updateCartTotals();
        return;
    }
    
    container.innerHTML = '';
    
    cart.forEach((item, index) => {
        const itemDiv = document.createElement('div');
        itemDiv.className = 'cart-product-item';
        itemDiv.setAttribute('data-price', item.price);
        itemDiv.setAttribute('data-index', index);
        
        itemDiv.innerHTML = `
            <input type="checkbox" class="cart-checkbox cart-item-checkbox" checked>
            <img src="${item.img}" class="cart-product-image" alt="${item.name}">
            <div class="cart-product-details">
                <div class="cart-product-name">${item.name}</div>
                <div class="cart-product-actions">
                    <a href="#" class="cart-remove-btn">Excluir</a>
                </div>
            </div>
            <div class="cart-product-qty-section">
                <div class="cart-qty-controls">
                    <button class="cart-qty-btn cart-qty-minus">−</button>
                    <span class="cart-qty-value">${item.quantity}</span>
                    <button class="cart-qty-btn cart-qty-plus">+</button>
                </div>
            </div>
            <div class="cart-product-price-section">
                <div class="cart-product-price">R$ ${Math.floor(item.price)},<sup>${String((item.price % 1).toFixed(2)).split('.')[1]}</sup></div>
            </div>
        `;
        
        container.appendChild(itemDiv);
    });
    
    attachEventListeners();
    updateCartTotals();
}

function attachEventListeners() {
    // Remover item
    document.querySelectorAll('.cart-remove-btn').forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const item = this.closest('.cart-product-item');
            const index = parseInt(item.getAttribute('data-index'));
            
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            cart.splice(index, 1);
            localStorage.setItem('cart', JSON.stringify(cart));
            
            loadCartItems();
        });
    });

    // Diminuir quantidade
    document.querySelectorAll('.cart-qty-minus').forEach(btn => {
        btn.addEventListener('click', function() {
            const item = this.closest('.cart-product-item');
            const index = parseInt(item.getAttribute('data-index'));
            const qtySpan = this.parentElement.querySelector('.cart-qty-value');
            let qty = parseInt(qtySpan.textContent);
            
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            
            if (qty > 1) {
                cart[index].quantity = qty - 1;
                localStorage.setItem('cart', JSON.stringify(cart));
                loadCartItems();
            } else {
                cart.splice(index, 1);
                localStorage.setItem('cart', JSON.stringify(cart));
                loadCartItems();
            }
        });
    });

    // Aumentar quantidade
    document.querySelectorAll('.cart-qty-plus').forEach(btn => {
        btn.addEventListener('click', function() {
            const item = this.closest('.cart-product-item');
            const index = parseInt(item.getAttribute('data-index'));
            const qtySpan = this.parentElement.querySelector('.cart-qty-value');
            let qty = parseInt(qtySpan.textContent);
            
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            cart[index].quantity = qty + 1;
            localStorage.setItem('cart', JSON.stringify(cart));
            loadCartItems();
        });
    });

    // Checkboxes
    document.querySelectorAll('.cart-item-checkbox').forEach(checkbox => {
        checkbox.addEventListener('change', updateCartTotals);
    });
}

// Atualizar totais
function updateCartTotals() {
    let subtotal = 0;
    let itemCount = 0;
    
    document.querySelectorAll('.cart-product-item').forEach(item => {
        const checkbox = item.querySelector('.cart-item-checkbox');
        if (checkbox && checkbox.checked) {
            const price = parseFloat(item.getAttribute('data-price'));
            const qty = parseInt(item.querySelector('.cart-qty-value').textContent);
            subtotal += price * qty;
            itemCount += qty;
        }
    });
    
    document.getElementById('total-items').textContent = itemCount;
    
    const subtotalParts = subtotal.toFixed(2).split('.');
    document.getElementById('subtotal-value').textContent = subtotalParts[0];
    document.getElementById('subtotal-cents').textContent = subtotalParts[1];
    
    const totalParts = subtotal.toFixed(2).split('.');
    document.getElementById('total-value').textContent = totalParts[0];
    document.getElementById('total-cents').textContent = totalParts[1];
}

// Selecionar todos
document.getElementById('select-all-products').addEventListener('change', function() {
    document.querySelectorAll('.cart-item-checkbox').forEach(checkbox => {
        checkbox.checked = this.checked;
    });
    updateCartTotals();
});

// Carregar ao iniciar
document.addEventListener('DOMContentLoaded', function() {
    loadCartItems();
    
    // Botão de finalizar compra
    document.getElementById('finalizarCompra').addEventListener('click', function() {
        // Verificar se usuário está logado
        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return null;
        }
        
        const userEmail = getCookie('UsuarioEmail');
        
        if (!userEmail) {
            // Usuário não está logado - redirecionar para login
            if (confirm('Você precisa estar logado para finalizar a compra.\n\nDeseja fazer login agora?')) {
                window.location.href = '/usuario/login';
            }
            return;
        }
        
        const cart = JSON.parse(localStorage.getItem('cart')) || [];
        
        if (cart.length === 0) {
            alert('Seu carrinho está vazio!');
            return;
        }
        
        // Pegar apenas os itens selecionados
        const selectedItems = [];
        document.querySelectorAll('.cart-product-item').forEach((item, index) => {
            const checkbox = item.querySelector('.cart-item-checkbox');
            if (checkbox && checkbox.checked) {
                const cartItem = cart[index];
                selectedItems.push({
                    id: cartItem.id,
                    name: cartItem.name,
                    price: cartItem.price,
                    quantity: parseInt(item.querySelector('.cart-qty-value').textContent),
                    img: cartItem.img
                });
            }
        });
        
        if (selectedItems.length === 0) {
            alert('Selecione pelo menos um produto!');
            return;
        }
        
        // Enviar pedido para o servidor
        fetch('/pedido/gravar', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            credentials: 'include', // IMPORTANTE: Envia cookies com a requisição
            body: JSON.stringify(selectedItems)
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            if (data.ok) {
                // Remover itens selecionados do carrinho
                const remainingItems = cart.filter((_, index) => {
                    const item = document.querySelectorAll('.cart-product-item')[index];
                    const checkbox = item?.querySelector('.cart-item-checkbox');
                    return !(checkbox && checkbox.checked);
                });
                
                localStorage.setItem('cart', JSON.stringify(remainingItems));
                
                // Atualizar contador do carrinho no header
                if (typeof updateCartCount === 'function') {
                    updateCartCount();
                }
                
                // Mostrar mensagem de sucesso e recarregar
                alert('✓ ' + data.msg + '\n\nSua compra foi registrada com sucesso!');
                window.location.reload();
            } else {
                alert('✗ ' + data.msg);
            }
        })
        .catch(error => {
            console.error('Erro ao finalizar pedido:', error);
            alert('✗ Erro ao processar a compra: ' + error.message + '\n\nVerifique o console do navegador (F12) para mais detalhes.');
        });
    });
});
</script>