</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
let itensSelecionados = [];

function abrirModalDevolucao(button) {
    // Obter dados do botão
    const idVenda = button.getAttribute('data-venda-id');
    const itens = JSON.parse(button.getAttribute('data-itens'));
    
    // Resetar formulário
    document.getElementById('formDevolucao').reset();
    document.getElementById('mensagemDevolucao').style.display = 'none';
    document.getElementById('devolucaoIdVenda').value = idVenda;
    itensSelecionados = [];
    
    // Preencher itens
    const container = document.getElementById('itensDevolucao');
    container.innerHTML = '';
    
    itens.forEach((item, index) => {
        const itemDiv = document.createElement('div');
        itemDiv.className = 'item-devolucao';
        itemDiv.onclick = function() { toggleItem(index); };
        
        itemDiv.innerHTML = `
            <div class="row align-items-center">
                <div class="col-1">
                    <input type="checkbox" class="item-checkbox" id="item-${index}" data-index="${index}">
                </div>
                <div class="col-2">
                    <img src="/images/produtos/${item.produtoImagem || 'sem-imagem.png'}" 
                         style="width: 100%; border-radius: 4px;">
                </div>
                <div class="col-5">
                    <strong>${item.produtoNome}</strong><br>
                    <small>Qtd: ${item.quantidade}</small>
                </div>
                <div class="col-4 text-right">
                    <strong>R$ ${parseFloat(item.valorUnitario).toFixed(2).replace('.', ',')}</strong>
                </div>
            </div>
        `;
        
        container.appendChild(itemDiv);
        
        // Armazenar dados do item
        itensSelecionados.push({
            selecionado: false,
            produtoId: item.produtoId,
            quantidade: item.quantidade,
            preco: item.valorUnitario
        });
    });
    
    // Abrir modal
    $('#modalDevolucao').modal('show');
}

function toggleItem(index) {
    const checkbox = document.getElementById(`item-${index}`);
    const itemDiv = checkbox.closest('.item-devolucao');
    
    checkbox.checked = !checkbox.checked;
    itensSelecionados[index].selecionado = checkbox.checked;
    
    if (checkbox.checked) {
        itemDiv.classList.add('selecionado');
    } else {
        itemDiv.classList.remove('selecionado');
    }
}

// Atualizar label do input file
document.getElementById('devolucaoFoto').addEventListener('change', function(e) {
    const fileName = e.target.files[0]?.name || 'Escolher arquivo...';
    const label = document.querySelector('.custom-file-label');
    label.textContent = fileName;
});

// Enviar formulário de devolução
document.getElementById('formDevolucao').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const btnEnviar = document.getElementById('btnEnviarDevolucao');
    const spinner = btnEnviar.querySelector('.spinner-border');
    const mensagemDiv = document.getElementById('mensagemDevolucao');
    
    // Validar itens selecionados
    const itensSel = itensSelecionados.filter(i => i.selecionado);
    if (itensSel.length === 0) {
        mensagemDiv.className = 'alert alert-danger';
        mensagemDiv.textContent = 'Selecione pelo menos um item para devolução';
        mensagemDiv.style.display = 'block';
        return;
    }
    
    // Desabilitar botão e mostrar spinner
    btnEnviar.disabled = true;
    spinner.classList.remove('d-none');
    mensagemDiv.style.display = 'none';
    
    try {
        const formData = new FormData(this);
        
        // Adicionar itens selecionados
        formData.append('itens', JSON.stringify(itensSel.map(i => ({
            produtoId: i.produtoId,
            quantidade: i.quantidade,
            preco: i.preco
        }))));
        
        const response = await fetch('/solicitar-devolucao', {
            method: 'POST',
            body: formData
        });
        
        const data = await response.json();
        
        if (data.ok) {
            mensagemDiv.className = 'alert alert-success';
            mensagemDiv.textContent = data.msg;
            mensagemDiv.style.display = 'block';
            
            // Resetar formulário
            this.reset();
            document.querySelector('.custom-file-label').textContent = 'Escolher arquivo...';
            
            // Fechar modal após 2 segundos
            setTimeout(() => {
                $('#modalDevolucao').modal('hide');
                location.reload();
            }, 2000);
        } else {
            mensagemDiv.className = 'alert alert-danger';
            mensagemDiv.textContent = data.msg || 'Erro ao enviar solicitação';
            mensagemDiv.style.display = 'block';
        }
    } catch (error) {
        console.error('Erro:', error);
        mensagemDiv.className = 'alert alert-danger';
        mensagemDiv.textContent = 'Erro ao processar solicitação. Tente novamente.';
        mensagemDiv.style.display = 'block';
    } finally {
        btnEnviar.disabled = false;
        spinner.classList.add('d-none');
    }
});
</script>

</body>
</html>
